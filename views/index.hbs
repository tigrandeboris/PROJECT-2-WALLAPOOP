<main>
    <div class="container-fluid mb-4">
        <div class="row">
            <div class="col p-0">
                <div class="carousel slide" data-bs-ride="carousel" id="slider">
                    <ol class="carousel-indicators">
                        <li class="active" data-bs-slide-to="0" data-bs-target="#slider"></li>
                        <li data-bs-slide-to="1" data-bs-target="#slider"></li>
                        <li data-bs-slide-to="2" data-bs-target="#slider"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="/images/banner-1.jpg">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/images/banner-2.jpg">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/images/banner-3.jpg">
                        </div>
                    </div>
                    <a class="carousel-control-prev" data-bs-slide="prev" href="#slider" role="button">
                        <span aria-hidden="true" class="carousel-control-prev-icon"></span>
                        <span class="visually-hidden">Previous</span>
                    </a>
                    <a class="carousel-control-next" data-bs-slide="next" href="#slider" role="button">
                        <span aria-hidden="true" class="carousel-control-next-icon"></span>
                        <span class="visually-hidden">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <section class="section1">
        <h1>Top Products</h1>
        <div class="container">
            {{#each products}}
                <div class="col-sm-12 col-md-6 col-lg-3">
                    <div class="card box">
                        <img class="card-img-top image" src="../public/images/product-img.jpg"/>
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">
                                {{this.user.username}}
                            </p>
                            <p class="card-text">
                                {{this.description}}
                            </p>
                            <p class="card-text">
                                {{this.price}} EUR
                            </p>
                            <div class="text-center">
                                <a class="btn btn-primary" href="https://google.es"
                                   target="_blank">Open</a>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </section>
</main>